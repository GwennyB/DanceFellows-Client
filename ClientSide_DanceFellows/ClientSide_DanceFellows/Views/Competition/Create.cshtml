@model ClientSide_DanceFellows.Models.Competition

@{
    ViewData["Title"] = "View";
    Layout = "_Layout";
}

<h1>Create Competition</h1>

@{<partial name="_NavbarPartial" />}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompType" class="control-label"></label>
                <select asp-for="CompType" asp-items="@Html.GetEnumSelectList(typeof(ClientSide_DanceFellows.Models.CompType))"></select>
                <span asp-validation-for="CompType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <select asp-for="Level" asp-items="@Html.GetEnumSelectList(typeof(ClientSide_DanceFellows.Models.Level))"></select>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

