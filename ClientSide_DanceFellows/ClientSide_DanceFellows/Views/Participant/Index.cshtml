@model IEnumerable<ClientSide_DanceFellows.Models.Participant>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>All Participants</h1>
@{<partial name="_NavbarPartial" />}
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WSC_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WSC_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxLevel)
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
