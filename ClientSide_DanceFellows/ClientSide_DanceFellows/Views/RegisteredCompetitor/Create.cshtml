@model ClientSide_DanceFellows.Models.RegisteredCompetitor
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Add New Competitor</h1>
@{<partial name="_NavbarPartial" />}
<h4>Registered Competitor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ParticipantID" class="control-label"></label>
                <select asp-for="ParticipantID" class="form-control" asp-items="ViewBag.ParticipantID"></select>
            </div>
            <div class="form-group">
                <label asp-for="CompetitionID" class="control-label"></label>
                <select asp-for="CompetitionID" class="form-control" asp-items="ViewBag.CompetitionID"></select>
            </div>
            <div class="form-group">
                <label asp-for="BibNumber" class="control-label"></label>
                <input asp-for="BibNumber" class="form-control" min="100" max="999" />
                <span asp-validation-for="BibNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" asp-items="@Html.GetEnumSelectList(typeof(ClientSide_DanceFellows.Models.Role))"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>