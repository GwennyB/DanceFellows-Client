@model IEnumerable<ClientSide_DanceFellows.Models.RegisteredCompetitor>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Index</h1>
@{<partial name="_NavbarPartial" />}

<form asp-controller="RegisteredCompetitor" asp-action="Index">
    <p>
        Competition ID: <input type="number" min="0" name="SearchString" method="get">
        <input class="btn btn-primary" type="submit" value="Filter" />
    </p>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="RegisteredCompetitor" asp-action="Score">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Placement)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BibNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ChiefJudgeScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JudgeOneScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JudgeTwoScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JudgeThreeScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JudgeFourScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JudgeFiveScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JudgeSixScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Participant)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Competition)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Placement)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BibNumber)
                        <input type="hidden" value="@Html.DisplayFor(modelItem => item.CompetitionID)" name="CompetitionID" method="post">
                        <input type="hidden" value="@Html.DisplayFor(modelItem => item.ParticipantID)" name="ParticipantID" method="post">
                    </td>
                    <td>
                        <input type="number" value="@Html.DisplayFor(modelItem => item.ChiefJudgeScore)" min="0" max="10" name="ChiefJudgeScore" method="post">
                    </td>
                    <td>
                        <input type="number" value="@Html.DisplayFor(modelItem => item.JudgeOneScore)" min="0" max="10" name="JudgeOneScore" method="post">
                    </td>
                    <td>
                        <input type="number" value="@Html.DisplayFor(modelItem => item.JudgeTwoScore)" min="0" max="10" name="JudgeTwoScore" method="post">
                    </td>
                    <td>
                        <input type="number" value="@Html.DisplayFor(modelItem => item.JudgeThreeScore)" min="0" max="10" name="JudgeThreeScore" method="post">
                    </td>
                    <td>
                        <input type="number" value="@Html.DisplayFor(modelItem => item.JudgeFourScore)" min="0" max="10" name="JudgeFourScore" method="post">
                    </td>
                    <td>
                        <input type="number" value="@Html.DisplayFor(modelItem => item.JudgeFiveScore)" min="0" max="10" name="JudgeFiveScore" method="post">
                    </td>
                    <td>
                        <input type="number" value="@Html.DisplayFor(modelItem => item.JudgeSixScore)" min="0" max="10" name="JudgeSixScore" method="post">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Participant.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Competition.CompType)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { participantID = item.ParticipantID, competitionID = item.CompetitionID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input class="btn btn-success" type="submit" value="Submit Scores" />
</form>
